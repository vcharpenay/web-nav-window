{
    "manifest_version": 2,
    "version": "0.3",
    "default_locale": "en_US",
    "name": "__MSG_extension_name__",
    "browser_action": {
      "default_title": "__MSG_extension_name__",
      "default_icon": {
          "16": "icon-16.png",
          "32": "icon-32.png",
          "64": "icon-64.png"
      }
    },
    "permissions": [
        "history"
    ],
    "web_accessible_resources": [
        "ui.html",
        "util.js",
        "navigation.js",
        "network.js",
        "lib/vis-network.min.js",
        "lib/uri.all.min.js"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    }
}